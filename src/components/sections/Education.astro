---
import Section from "../Section.astro"

import { education } from "@cv"
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, startDate, endDate, area, url }) => {
        const startYear = new Date(startDate).getFullYear()
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Actual"
        const years = `${startYear} - ${endYear}`

        return (
          <li>
            <article>
              <header>                
                <h3>{area}</h3>
                <time>{years}</time>
              </header>
              <footer>
                <h4>
                  <a href={url} title={`Ver ${institution}`} target="_blank">                        
                      {institution}
                    </a>
                </h4>     
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 600;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  footer h4 {
    font-weight: 400;
    color: #111;    
  }

  footer a {
    color: #111;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>