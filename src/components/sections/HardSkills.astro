---
import Section from "../Section.astro"

import { hardskills } from "@cv"


---

<Section title="Hard Skills">
  <ul>
    {
      hardskills.map(({ name }) => {       
        return (
          <li>
            <span>{name}</span>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: #eee;
    color: #444;
    font-size: 0.8rem;
    border: 1px solid #f2f2f2;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>