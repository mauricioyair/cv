---
import Section from "../Section.astro"

import { work } from "@cv"
---

<Section title="Experiencia laboral">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights, url, badges }) => {          
          const startYear = new Date(startDate).getFullYear()
          const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actual"
          const years = `${startYear} - ${endYear}`
        
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      {position}
                      {badges.map(badge => <span>{badge}</span>)}
                    </h3>
                    {
                      url ?
                      <h4>                      
                      <a href={url} title={`Ver ${name}`} target="_blank">
                        {name}
                      </a>                                            
                    </h4> : <h4>{name}</h4>
                    }
                  </div>

                  <time>{years}</time>
                </header>

                <footer>
                  <ul>                  
                    {
                      summary.map(summ => <li>{summ}</li>)
                    }
                  </ul>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h4 {
    font-weight: 400;
    color: #111;    
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h3 {
    color: #111;
    font-weight: 600;
    display: flex;
    flex-wrap: wrap;
    column-gap: 8px;
  }

  article h3 span {
    align-items: center;
    background: #eee;
    border-radius: 6px;
    color: black;
    display: flex;
    font-size: 0.6rem;
    font-weight: 600;
    border: 1px solid #f2f2f2; 
    padding: 0.2rem 0.6rem;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  footer ul {
    display: inline-block;    
    list-style: disc;
  }

  footer ul li {
    margin-left: 24px;    
    line-height: 1.5;    
    text-wrap: pretty;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>